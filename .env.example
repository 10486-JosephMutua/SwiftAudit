# ==============================================
# LLM PROVIDER KEYS (At least one is required)
# ==============================================
# Primary Provider (Recommended for speed/cost)
GROQ_API_KEY=gsk_your_groq_key_here
GROQ_MODEL=llama-3.1-70b-versatile

# Fallback Providers (Optional - populate if you want redundancy)
OPENAI_API_KEY=sk-...
MISTRAL_API_KEY=...
SCW_API_KEY=...
NVIDIA_API_KEY=...
NOVITA_API_KEY=...
CLOUDFLARE_ACCOUNT_ID=...
CLOUDFLARE_API_TOKEN=...
OPEN_ROUTER_API=...

# ==============================================
# SECURITY TOOLS (Optional but recommended)
# ==============================================
# Required for "Researcher" agent to perform deep scans
# Get free token at: https://snyk.io/account
SNYK_TOKEN=your_snyk_token_here

# Required for "Navigator" agent to see private repos & avoid rate limits
GITHUB_TOKEN=ghp_your_github_token_here

# ==============================================
# APP CONFIGURATION
# ==============================================
FLASK_ENV=development
FLASK_PORT=5000
FLASK_SECRET_KEY=dev-secret-change-me

# ==============================================
# PERFORMANCE TUNING
# ==============================================
# Number of files to fetch from GitHub in parallel
CONCURRENT_FILE_FETCH=6

# Number of LLM threads for analyzing code chunks
CONCURRENT_LLM_SCANS=4

# Run Snyk and Trivy simultaneously? (True/False)
CONCURRENT_SCANNERS=true

# Limits
MAX_FILES_TO_ANALYZE=15
MAX_FILE_SIZE_BYTES=1048576

# ==============================================
# TIMEOUTS (Seconds)
# ==============================================
GIT_CLONE_TIMEOUT=60
TOOL_SCAN_TIMEOUT=360
SNYK_TIMEOUT=120
TRIVY_TIMEOUT=300